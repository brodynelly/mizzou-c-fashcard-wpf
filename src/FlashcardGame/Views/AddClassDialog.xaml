<Window x:Class="FlashcardGame.Views.AddClassDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Class"
        Width="300"
        Height="350" Background="#2b1b47"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Add a New Class" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,15"/>
        

        <TextBlock Text="Class Name:" Foreground="White" FontSize="16" Margin="0,5"/>
        <TextBox x:Name="ClassNameTextBox" Background="#3E2A47" Foreground="White" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,5"/>

        <TextBlock Text="Description:" Foreground="White" FontSize="16" Margin="0,10,0,5"/>
        <TextBox x:Name="DescriptionTextBox" Background="#3E2A47" Foreground="White" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,5"
                 Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Click="CancelButton_Click" Background="#4A3C57" Foreground="White" BorderThickness="0" Padding="10,5" Margin="0,0,10,0"/>
            <Button Content="Add" Click="AddButton_Click" Background="#4A3C57" Foreground="White" BorderThickness="0" Padding="10,5"/>
        </StackPanel>
    </StackPanel>
</Window>